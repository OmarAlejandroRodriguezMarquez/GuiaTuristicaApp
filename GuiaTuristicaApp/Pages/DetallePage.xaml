<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GuiaTuristicaApp.Pages.DetallePage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label Text="{Binding Nombre}" FontSize="30" Margin="0,0,0,20" HorizontalTextAlignment="Center" HorizontalOptions="Center"></Label>
                <Label Text="{Binding Descripcion}"></Label>
                <HorizontalStackLayout HorizontalOptions="Center">
                    <Image
                        WidthRequest="100"
                        HeightRequest="100"
                        Source="{Binding Imagen}"></Image>
                    <Image
                        WidthRequest="100"
                        HeightRequest="100"
                        Source="https://cdn-icons-png.flaticon.com/512/1040/1040241.png"></Image>
                </HorizontalStackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>